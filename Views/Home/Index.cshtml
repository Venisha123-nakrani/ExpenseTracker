@page


<div class="container mt-5">
    <header class="text-center mb-5">
        <h1 class="display-4">Welcome to Expense Tracker</h1>
        <p class="lead">Manage your income and expenses effortlessly.</p>
    </header>

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Track Your Finances</h5>
                    <p>Monitor income and expenses in real-time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Set Financial Goals</h5>
                    <p>Plan savings and control unnecessary expenses.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Generate Reports</h5>
                    <p>Analyze spending patterns with detailed reports.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="Registration" asp-action="Create" class="btn btn-primary btn-lg">Get Started</a>
    </div>
</div>
