@model ExpenseTracker.Model.Income

<h2>Delete Income</h2>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this income record?</h5>
    <p><strong>Category:</strong> @Model.IncomeCategory.CategoryName</p>
    <p><strong>Amount:</strong> @Model.Amount</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Income Date:</strong> @Model.IncomeDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Payment Mode:</strong> @Model.Payment.Name</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IncomeID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
