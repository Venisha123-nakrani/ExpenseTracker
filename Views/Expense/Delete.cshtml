@{
}
@model Expense

<h2>Delete Expense</h2>
<h4>Are you sure you want to delete this expense?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>

        <dt class="col-sm-2">Payment Mode:</dt>
        <dd class="col-sm-10">@Model.Payment.Name</dd>

        <dt class="col-sm-2">Amount:</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Date:</dt>
        <dd class="col-sm-10">@Model.ExpenseDate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ExpenseID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
