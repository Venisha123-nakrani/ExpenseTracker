@{
}
@model ExpenseTracker.Model.Expense
<h2> Expense Details</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Category: @Model.Category.Name</h5>
        <p class="card-text"><strong>Amount:</strong> @Model.Amount</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Expense Date:</strong> @Model.ExpenseDate.ToString("yyyy-MM-dd")</p>
        <p class="card-text"><strong>Payment Mode:</strong> @Model.Payment.Name</p>
        <p class="card-text"><strong>User:</strong> @Model.User.Email</p>
        <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
        <a asp-action="Edit" asp-route-id="@Model.ExpenseID" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>